<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">

  <Properties>
    <Property name="basePath">./target/logs</Property>
  </Properties>

  <Appenders>

    <Console name="console" target="SYSTEM_OUT">
      <PatternLayout
        pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p [%12t] %c{1} - %m%n" />
    </Console>

    <RollingFile name="fileLogger"
      fileName="${basePath}/app.log"
      filePattern="${basePath}/app-%d{yyyy-MM-dd}.log">
      <PatternLayout
        pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%12t] %c{1} - %msg%n" />
      <Policies>
        <TimeBasedTriggeringPolicy
          interval="1" modulate="true" />
        <SizeBasedTriggeringPolicy size="10MB" />
      </Policies>
      <!-- Max 10 files will be created everyday -->
      <DefaultRolloverStrategy max="10">
        <Delete basePath="${basePathr}" maxDepth="10">
          <!-- Delete all files older than 30 days -->
          <IfLastModified age="30d" />
        </Delete>
      </DefaultRolloverStrategy>
    </RollingFile>

  </Appenders>
  <Loggers>

    <Logger name="com.price.processor.throttler" level="debug"
      additivity="false">
      <AppenderRef ref="fileLogger" />
      <AppenderRef ref="console" level="info" />
    </Logger>

    <Root level="debug" additivity="false">
      <AppenderRef ref="console" level="info" />
    </Root>



  </Loggers>
</Configuration>
